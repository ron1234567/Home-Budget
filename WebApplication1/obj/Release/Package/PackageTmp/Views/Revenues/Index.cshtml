        <th>
            @*@Html.DisplayNameFor(model => model.CreationDate)*@
            Creation Date
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.RevenueDate)*@
            Revenue Date
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Amount)*@
            Amount
        </th>
        <th>
