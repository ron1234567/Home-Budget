		<!-- ################################################################################################ -->
		<div class="jumbotron">
			<article id="pageintro" class="hoc clear">
				<!-- ################################################################################################ -->
				
				<div class="heading" style="font-size: 450%;font-family: 'Anton', sans-serif;">Welcome to Home Budget</div>
				<p style="font-size: 150%;font-family: 'Anton', sans-serif;">Home Budget is a free web application for management of household expenses and income</p>
				<footer><a class="btn" style="font-size: 100%;font-family: 'Anton', sans-serif;" href="Account/Register">GET STARTED FOR FREE</a></footer>

				<!-- ################################################################################################ -->
			</article>
		</div>
		<!-- ################################################################################################ -->
		<!-- ################################################################################################ -->
		<!-- ################################################################################################ -->
		
		<!-- ################################################################################################ -->
	</div>
	<a id="backtotop" href="#top"><i class="fa fa-chevron-up"></i></a>
