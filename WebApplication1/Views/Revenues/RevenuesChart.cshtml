@model WebApplication1.Models.Revenue

@{
    ViewBag.Title = "RevenuesChart";
}
<style>
    .center {
        margin: auto;
        width: 60%;
        //border: 3px solid #73AD21;
        padding: 10px;
    }
</style>
<h1>My Revenues Chart</h1>

<div class="center" id="piechart"></div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script type="text/javascript">
    // Load google charts
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);

    // Draw the chart and set the chart values
    function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['Revenue type', 'Amount'],
            ['Salary', @ViewBag.SalaryAmount + 0],
            ['Scholarship', @ViewBag.ScholarshipAmount + 0],
            ['Award', @ViewBag.AwardAmount + 0],
            ['Gift', @ViewBag.GiftAmount + 0],
            ['Other', @ViewBag.OtherAmount + 0]
        ]);

        // Optional; add a title and set the width and height of the chart
        var options = { 'title': 'My Revenues Chart', is3D: true, 'width': 550, 'height': 400 };

        // Display the chart inside the <div> element with id="piechart"
        var chart = new google.visualization.PieChart(document.getElementById('piechart'));
        chart.draw(data, options);
    }
</script>

<div>
    @Html.ActionLink("Back to My Revenues", "Index")
</div>

