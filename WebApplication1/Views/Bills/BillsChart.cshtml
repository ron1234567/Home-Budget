<!DOCTYPE html>
<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    @model WebApplication1.Models.Bill

    @{
        ViewBag.Title = "BillsChart";
    }
    <style>
        .center {
            margin: auto;
            width: 60%;
            //border: 3px solid #73AD21;
            padding: 10px;
        }
    </style>


</head>

<body>


    <div class="center" id="piechart"></div>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script type="text/javascript">
    // Load google charts
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);

    // Draw the chart and set the chart values
    function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['Bill type', 'Amount'],
            ['Electricity', @ViewBag.ElectricityAmount + 0],
            ['Water', @ViewBag.WaterAmount + 0],
            ['Property Tax', @ViewBag.PropertyTaxAmount + 0],
            ['Rent', @ViewBag.RentAmount + 0],
            ['Car Insurance', @ViewBag.CarInsuranceAmount + 0],
            ['Home Insurance', @ViewBag.HomeInsuranceAmount + 0],
            ['Vacations', @ViewBag.VacationAmount + 0],
            ['Other', @ViewBag.OtherAmount + 0]
        ]);

        // Optional; add a title and set the width and height of the chart
        var options = {
            'title': 'My Bills Chart',
            titleTextStyle: {
                fontName: 'Anton', fontSize: 24, bold: false, color: '#20438d'
            },
            legend: {
                textStyle: {
                    fontName: 'Anton', fontSize: 16, bold: false, color: '#20438d'
                }
            },
            tooltip: {
                textStyle: {
                    fontName: 'Anton', fontSize: 16, bold: false, color: '#20438d'
                }
            },
            
            is3D: true,
            'width': 750,
            'height': 600
        };

        // Display the chart inside the <div> element with id="piechart"
        var chart = new google.visualization.PieChart(document.getElementById('piechart'));
        chart.draw(data, options);
    }
    </script>

        <div style="font-family: Anton; color: #516af9; font-size: medium">
            @Html.ActionLink("Back to My Bills", "Index")
        </div>




</body>
</html>